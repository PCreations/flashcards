{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "name": "vscode-jest-tests",
      "request": "launch",
      "env": {
        "GOOGLE_APPLICATION_CREDENTIALS": "./src/adapters/firestoreAdmin/config/test.json",
        "AUTHENTICATION_GATEWAY": "src/adapters/inMemory/authenticationGateway",
        "BOX_REPOSITORY": "src/adapters/firestoreAdmin/boxRepository"
      },
      "args": [
        "notifyingAnswer.steps",
        "--runInBand"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest"
    },
    {
      "type": "node",
      "name": "cucumber",
      "request": "launch",
      "args": [
        "dist/features/",
        "--name",
        "The player notifies a wrong answer for a card from the second partition",
        "--world-parameters",
        "{\"dependenciesPath\":{\"boxRepository\":\"src/adapters/inMemory/boxRepository\", \"authenticationGateway\":\"src/adapters/inMemory/authenticationGateway\"}}"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "program": "${workspaceFolder}/node_modules/cucumber/bin/cucumber-js",
      "preLaunchTask": "prepare cucumber tests"
    }
  ]
}